snippet aws "Create a skeleton for an aws terraform file" b
variable "aws_access_key" {}
variable "aws_secret_key" {}

provider "aws" {
	access_key = "${var.aws_access_key}"
	secret_key = "${var.aws_secret_key}"
	region = "${1:us-east-1}"
}
endsnippet

snippet res "Creates a terraform resource definition" b
resource "${1:resource_type}" "${2:resource_name}" {
	$3
}
endsnippet

snippet var "Creates a variable definition" b
variable "${1:variable_name}" {$2}
endsnippet
